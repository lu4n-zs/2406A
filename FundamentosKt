//-------------------------------------------------------------------------------------------
fun main() {
   
    /*
    //Operadores Matemáticos 
    
    //	+	-> adição
    //	-	-> subtração 
    //	/	-> divisão
    //	*	-> multiplicação 
    //	%	-> módulo
    //	
    var halls = 7
    var freegells = 6
    
    println(halls % freegells)
    //
    */
   
    
    // EXERCÍCIO - Faça uma calculadora que contenham cada um das operações matemáticas 
    // como resultado do cálculo de duas variáveis (contendo resultado para +, -, /, *, e %),
    // contendo também uma interface simples e bem bonita :)
    // 
    // 
    // 
    // 
    //
    
    
    
    var n1 = 10
    var n2 = 10
    
    println("||------------------------------------------------||")
    println("||                                                ||")
    println("||             ❤ Calculadora ❤                  || ")
    println("||                                                ||  ")
    println("||                                                ||")
    println("||              ❤ Bem Vindes ❤                  ||")
    println("||                                                ||")
    println("||                                                ||")
    println("||--  Soma  $n1 e $n2: -----------------------------||")
    println("||--  Resultado: "+(n1 + n2)+" ------------------------------||")
    println("||                                                ||")  
    println("||-- Subtração  $n1 e $n2: -------------------------||")
    println("||-- Resultado: "+(n1 - n2)+" --------------------------------||")
    println("||                                                ||")
    println("||-- Multiplicação:  $n1 e $n2 ---------------------||")
    println("||-- Resultado: "+(n1 * n2)+" ------------------------------||")
    println("||                                                ||")
    println("||-- Divisão  $n1 e $n2: ---------------------------||")
    println("||-- Resultado: "+(n1 / n2)+" --------------------------------||")
    println("||                                                ||")
    println("||-- Módulo  $n1 e $n2: ----------------------------||")
    println("||-- Resultado: "+(n1 % n2)+" --------------------------------||")
    println("||                                                ||")
    println("||------------------------------------------------||")
    
    
}
//--------------------------------------------------------------------------------------------
